{
        "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2018", "esnext.asynciterable"],
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "build"
    },
    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ],
    "include": ["src/**/*", "test"],
}

